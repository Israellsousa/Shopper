{
  "compilerOptions": {
    "target": "ES2020",                         // Define o alvo de compilação
    "module": "commonjs",                       // Define o sistema de módulos
    "strict": true,                             // Ativa todas as verificações estritas
    "esModuleInterop": true,                    // Habilita interoperabilidade com módulos ES
    "skipLibCheck": true,                       // Ignora a verificação de tipos em arquivos de declaração
    "forceConsistentCasingInFileNames": true,   // Exige a consistência de capitalização nos nomes de arquivos
    "outDir": "./dist",                         // Define o diretório de saída para arquivos compilados
    "rootDir": "./src",                         // Define o diretório raiz dos arquivos de entrada
    "baseUrl": "./src",                         // Define o diretório base para importações absolutas
    "paths": {
      "*": ["*", "src/*"]                       // Configura caminhos para importações
    },
    "sourceMap": true,                          // Gera arquivos de mapa de origem para depuração
    "declaration": true                         // Gera arquivos de declaração .d.ts para módulos
  },
  "include": ["src/**/*.ts"],                   // Inclui todos os arquivos .ts na pasta src
  "exclude": ["node_modules"]                   // Exclui a pasta node_modules
}
